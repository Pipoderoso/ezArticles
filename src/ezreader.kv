#: import main main
#: import ListAdapter kivy.adapters.listadapter.ListAdapter
RootForm:

<RootForm>:

<MainForm>:
	orientation: "vertical"
	articles_list: articles_listview
	BoxLayout:
		size_hint_y: None
		height: "40dp"
		Button:
			size_hint_x: 0.2
			text: "..."
		Label:
			size_hint_x: 0.4
			text: "ezArticle"
		Button:
			size_hint_x: 0.2
			text: "Reload"
            on_press: root.get_last_articles_sync()
		Button:
			size_hint_x: 0.2
			text: "Get Articles"
            on_press: root.get_last_articles_async()
	ScrollView:
		ListView:
			id: articles_listview
            adapter:
                ListAdapter(data=[],cls=main.ArticleButton,args_converter=root.args_converter)
			size_hint:(1, 1)
			item_strings: []

<ArticleButton>:
    text: self.article['title']
    height: "30dp"
    size_hint_y: None
    on_press: app.root.show_current_article(self.article)

<CurrentArticle>:
    orientation: "vertical"
    size_hint:(1, 1)
    Label:
        text: root.title
        text_size: root.width, None
        size_hint: (1, 0.2)
    ScrollView:
        scroll_type: ['bars', 'content']
        do_scroll_y: True
        orientation: "vertical"
        Label:
            text: root.text_to_show
            size_hint_y: None
            text_size: self.width, None
            height: self.texture_size[1]
    BoxLayout:
        orientation: "horizontal"
        size_hint_y: None
        height: "40dp"
        Button:
            text: "View Articles"
            on_press: app.root.show_main_form()
        Button:
            text: root.change_text_button_title
            on_press: root.toggle_text()
